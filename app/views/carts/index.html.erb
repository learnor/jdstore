<div class="row">
    <div class="col-md-12">
        <%= link_to "Empty Cart", clean_carts_path, method: :delete, class: 'pull-right btn btn-primary', data: { confirm: "Are you sure to empty cart? "} %>
        <h2>Shopping Cart</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th colspan="2"> Product Info</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>操作选项</th>
                </tr>
            </thead>
            <tbody>
                <% current_cart.cart_items.each do |ci| %>
                    <tr>
                        <td>
                            <%= link_to product_path(ci.product) do %>
                                <% if ci.product.image.present? %>
                                    <%= image_tag(ci.product.image.thumb.url, class: "thumbnail") %>
                                <% else %>
                                    <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                                <% end %>
                            <%end %>
                        </td>
                        <td>
                            <%= link_to ci.product.title, product_path(ci.product) %>
                        </td>
                        <td>
                            <%= ci.product.price %>
                        </td>
                        <td>
                            <% ci = current_cart.cart_items.find_by(product_id: ci.product_id) %>
                            <%= form_for ci, url: cart_item_path(ci.product_id) do |f| %>
                                <%= f.select :quantity, 1..ci.product.quantity %>
                                <%= f.submit "Update", data: {disable_with: "Updating..."} %>
                            <% end %>
                        </td>
                        <td>
                            <%= link_to cart_item_path(ci.product_id), method: :delete, data:{confirm: "Are you sure to delete #{ci.product.title} from cart?"} do %>
                                <%= fa_icon "trash" %>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <br>
        <div class="total clearfix">
            <span class="pull-right">
                <span>
                    Total: <%= render_cart_total_price(current_cart) %> US$
                  </span>
            </span>
        </div>
        <div class="checkout clearfix">
            <%= link_to "Checkout", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right" %>
        </div>
    </div>
</div>
