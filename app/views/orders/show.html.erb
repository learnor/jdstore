<div class="row">
    <div class="col-md-12">
        <h2>Order Details</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th width = "80%">Product Details</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                <% @product_lists.each do |pl| %>
                    <tr>
                        <td><%= pl.product_name %></td>
                        <td><%= pl.product_price %></td>
                        <td><%= pl.quantity %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <div class="total clearfix">
            <span class="pull-right"> Total <%= @order.total %> US$</span>
        </div>
        <hr>
        <h2>Shipping Info</h2>
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <td>Purchaser</td>
                </tr>
                <tr>
                    <td><%= @order.billing_name %> - <%= @order.billing_address %></td>
                </tr>
                <tr>
                    <td>Recipient</td>
                </tr>
                <tr>
                    <td><%= @order.shipping_name %> - <%= @order.shipping_address %></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
