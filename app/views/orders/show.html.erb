<div class="row">
  <div class="col-md-12">
    <h2>Order Details</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width = "80%">Product Details</th>
          <th>Unit Price</th>
          <th>Quantity</th>
        </tr>
      </thead>
      <tbody>
        <% @product_lists.each do |pl| %>
          <tr>
            <td><%= pl.product_name %></td>
            <td><%= pl.product_price %></td>
            <td><%= pl.quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="total clearfix">
      <span class="pull-right"> Total <%= @order.total %> US$</span>
    </div>
    <hr>
    <h2>Shipping Info</h2>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>Purchaser</td>
        </tr>
        <tr>
          <td><%= @order.billing_name %> - <%= @order.billing_address %></td>
        </tr>
        <tr>
          <td>Recipient</td>
        </tr>
        <tr>
          <td><%= @order.shipping_name %> - <%= @order.shipping_address %></td>
        </tr>
      </tbody>
    </table>
    <div class="pull-left">
      <% if @order.order_placed? || @order.paid? %>
        <%= link_to("Request to cancel", apply_to_cancel_order_path(@order), method: :post, class: "btn btn-info") %>
      <% end %>
    </div>
    <% if !@order.is_paid? %>
      <div class="group pull-right">
        <%= link_to("Pay by Alipay", pay_with_alipay_order_path(@order.token), method: :post, class: "btn btn-danger") %>
        <%= link_to("Pay by Wechat", pay_with_wechat_order_path(@order.token), method: :post, class: "btn btn-danger") %>
      </div>
    <% else %>
      <p class="text-center">此订单已完成付款</p>
    <% end %>
  </div>
</div>
